{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "ES7",
      "es2017",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "test",
    "src",
    "Contracts",
    "config.js",
    "truffle-config.js"
, "scripts", "migrations"  ]
}
